<div class="inquiry-wrap">
  <h1>お問い合わせ内容確認</h1>

  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
    <table class="table">
      <tr>
        <th>名前</th>
        <td>
          <%= f.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= f.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td>
          <%= f.hidden_field :message %>
          <%= @inquiry.message %>
        </td>
      </tr>
    </table>
    <%= f.submit '送信', :class => 'btn btn-primary' %>
  <% end %>
</div>
