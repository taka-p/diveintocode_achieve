<div class="tasks-wrap">
  <h2 class="page-header">マイタスク</h2>

  <%= link_to 'タスク登録', new_user_task_path(@user), class: 'btn btn-primary h-mb15' %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>作成者</th>
      <th>題名</th>
      <th>内容</th>
      <th>期日</th>
      <th>担当者</th>
      <th>完了/未完了</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tasks.each do |task| %>
        <tr>
          <td><%= task.user.name %></td>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.deadline.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= task.charge.name %></td>
          <td><%= if task.done? then '完了' else '未完了' end %></td>
          <td><%= if task.status == 1 then '対応中' elsif task.status == 0 then '未着手' end %></td>
          <td><%= link_to '詳細', user_task_path(task.user, task) %></td>
          <td><%= link_to '編集', edit_user_task_path(task.user, task) %></td>
          <td><%= link_to '削除', user_task_path(task.user, task), method: :delete,
                          data: { confirm: '本当に削除しますか？',
                                  commit: '削除する',
                                  cancel: 'やめる'
                          }, title: 'タスクの削除確認'  %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
