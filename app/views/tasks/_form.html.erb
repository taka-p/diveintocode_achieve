<%= form_for([@task.user, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="form-group">
    <%= f.label :title, '題名' %><br>
    <%= f.text_field :title, class: 'form-control', placeholder: '題名を入力してください' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '内容' %><br>
    <%= f.text_area :content, class: 'form-control', placeholder: '内容を入力してください' %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, '期日' %><br>
    <%= f.datetime_select :deadline, class: 'form-control', placeholder: '期日を入力してください' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :charge_id %>
  </div>
  <div class="form-group">
    <%= f.label :done, '完了チェック' %><br>
    <%= f.check_box :done %>
  </div>
  <div class="form-group">
    <%= f.label :status, '状態' %><br>
    <%= f.select :status, [['未着手', 0], ['対応中', 1]] %>
  </div>

<%
  if params['action'] == 'edit'
    submit_str = 'タスクを変更する'
  else
    submit_str = 'タスクを登録する'
  end
%>
  <div class="form-group">
    <%= f.submit submit_str, class: 'btn btn-primary' %>
  </div>
<% end %>

