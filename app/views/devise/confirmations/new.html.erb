<div class="devise-wrap">
  <h2><%= t('didnt_receive_confirmation_instructions') %></h2>

  <div class="fm-resend">
    <%= form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: 'example@gmail.com' %>
      </div>

      <div class="field form-group">
        <%= f.submit t('resend_confirmation'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
