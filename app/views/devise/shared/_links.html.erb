<%- if controller_name != 'sessions' %>
  <div class="form-group">
    <%= link_to  t('login'), new_session_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="form-group">
    <%= link_to t('signup'), new_registration_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="form-group">
    <%= link_to t('forget_your_password'), new_password_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="form-group">
    <%= link_to t('didnt_receive_confirmation_instructions'), new_user_confirmation_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="form-group">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-default' %>
  </div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="form-group">
      <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-default' %>
    </div>
  <% end -%>
<% end -%>
